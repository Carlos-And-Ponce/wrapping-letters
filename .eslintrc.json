{
  "ignorePatterns": ["lib/", "dist/"],
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "extends": ["eslint:recommended", "prettier", "plugin:react/recommended"],
  "plugins": ["prettier", "react"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "prettier/prettier": ["warn"]
  }
}
